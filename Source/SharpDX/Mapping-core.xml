    <map enum-item="ERROR_(.*)" name-tmp="$1" naming="noexpand"/>
    <context-clear/>

    <!--
    // *****************************************************************
    // Global documentation link
    // *****************************************************************
    -->
    <map doc="S_OK" name="SharpDX.Result.Ok"/>
    <map doc="FALSE" name="SharpDX.Result.False"/>
    <map doc="NULL" name="&lt;c&gt;null&lt;/c&gt;"/>

