    <map method=".*::GetTextMetricsW" name="GetTextMetrics" />
    <map method=".*::PreloadTextW" name="PreloadText" />
    <map method=".*::GetMessageW" name="GetMessage" />
    <map method=".*::DrawTextW" name="DrawText" />
