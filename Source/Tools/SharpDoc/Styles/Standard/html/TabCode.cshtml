@model SharpDoc.TemplateContext
@using SharpDoc.Model
<!-- 
// Dumps syntax section
-->
@helper Dump(string[] tabNamesAndValues)
    {
    <div class="grouptab">
	    <ul class="tabs"> 
            @for (int i = 0; i < tabNamesAndValues.Length; i+=2)
            {
                var tabName = tabNamesAndValues[i];
                if (i == 0)
                {
            <li class="code selected tab">@tabName</li> 
                }
                else
                {
    	    <li class="code tab">@tabName</li> 
                }
            }
	    </ul>            
        @for (int i = 1; i < tabNamesAndValues.Length; i += 2)
        {
            var tabValue = tabNamesAndValues[i];
            if (i == 1)
            {
        <div class="tabcontent selected">     
        @tabValue
        </div>
            }
            else
            {
        <div class="tabcontent">     
        @tabValue
        </div>
            }
        }
    </div>
}
