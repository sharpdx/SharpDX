<config id="sharpdx-direct3d11on12" xmlns="urn:SharpGen.Config">
  <depends>sharpdx</depends>
  <depends>sharpdx-dxgi</depends>
  <depends>sharpdx-d3dcompiler</depends>
  <depends>sharpdx-direct3d1x</depends>
  <depends>sharpdx-direct3d11</depends>
  <depends>sharpdx-direct3d12</depends>

  <namespace>SharpDX.Direct3D11On12</namespace>  
  <assembly>SharpDX.Direct3D11On12</assembly>

  <include-prolog>
    #define D3D12_NO_HELPERS
  </include-prolog>

  <!-- D3D11on12 includes -->
  <include file="d3d11on12.h" attach="true" />

  <naming />

  <context-set id="d3d11on12-all">
    <context>d3d11on12</context>
  </context-set>

  <!-- D3D11on12 extensions -->
  <extension>
    <context id="d3d11on12-all"/>
    <create class="D3D11On12" />
    
    <context-clear />
  </extension>

  <!-- D3D11on12 bindings -->
  <bindings> 
    
  </bindings>

  <!-- D3D11on12 mapping -->
  <mapping>
    <context id="d3d11on12-all"/>

    <!--
    // *****************************************************************
    // D3D11on12 Enumerations
    // *****************************************************************
    -->

    <!--
    // *****************************************************************
    // D3D11on12 Struct
    // *****************************************************************
    -->
    
    <!--
    // *****************************************************************
    // D3D11on12 Interfaces
    // *****************************************************************
    -->
    
    <!--
    // *****************************************************************
    // D3D11on12 Functions
    // *****************************************************************
    -->
    
    
    <map function="D3D11On12CreateDevice" dll='"d3d11.dll"' group="SharpDX.Direct3D11On12.D3D11On12"/>
    <map param="D3D11On12CreateDevice::Flags" type ="D3D11_CREATE_DEVICE_FLAG"/>
    <map param="D3D11On12CreateDevice::ppDevice" type="ID3D11Device" attribute="out fast" />
    
    
    <!--
    // *****************************************************************
    // D3D11on12 Constants
    // *****************************************************************
    -->

    <context-clear />
  </mapping>
</config>