    <SharpDXWP81>true</SharpDXWP81>
    <DirectX11_1>true</DirectX11_1>
    <DirectX11_2>true</DirectX11_2>
    <TargetPlatformVersion>8.1</TargetPlatformVersion>
    <TargetPlatformIdentifier>WindowsPhoneApp</TargetPlatformIdentifier>
  </PropertyGroup>
  
